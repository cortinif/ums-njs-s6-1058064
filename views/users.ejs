<%- include("includes/head.ejs") %>
		<link rel="stylesheet" href="/css/user.css" />
	</head>

	<body>
		<%- include("includes/navigations.ejs") %>
		<main>
			<h1>Users list - ejs</h1>
			<% if(users.length<=0){%>
			<h1>No users found</h1>
			<% }else{ %>
			<div class="grid">
				<% for(let u of users){ %>
				<article class="card users-item">
					<header class="card__header">
						<h1 class="user__title"><%= u.name %></h1>
					</header>
					<div class="card__content">
						<p class="user__description">
							User description
						</p>
					</div>
				</article>
				<% } %>
			</div>
			<% } %>
		</main>
<%- include("includes/end.ejs") %>